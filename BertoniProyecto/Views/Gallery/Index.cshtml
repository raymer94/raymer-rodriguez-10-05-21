@model IEnumerable<BertoniProyecto.Models.AlbumViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Albums</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a href="@Url.Action("Pictures", "Gallery", new {  albumId=item.Id })" class="btn btn-info ml-auto">Visualizar Album</a>
                </td>
            </tr>
        }
    </tbody>
</table>
